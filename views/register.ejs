<% include ./partials/header.ejs %>

    <div class="w-full h-screen bg-zinc-400 flex items-center justify-center">
        <div class="w-[27vw] bg-white rounded-2xl px-16 py-4">
            <img src="https://upload.wikimedia.org/wikipedia/commons/0/08/Pinterest-logo.png" alt=""
                class="h-[3vw] m-auto">
            <h1 class="text-2xl text-center font-semibold tracking-tight leading-none mt-2">Create New Account</h1>
            <form action="/register" method="post">
                <input class="border-2 rounded-xl block mt-4 w-full px-3 py-3" type="text" name="username"
                    placeholder="username">
                <input class="border-2 rounded-xl block mt-4 w-full px-3 py-3" type="text" name="fullname"
                    placeholder="Full Name">
                <input class="border-2 rounded-xl block mt-4 w-full px-3 py-3" type="email" name="email"
                    placeholder="email">
                <input class="border-2 rounded-xl block mt-4 w-full px-3 py-3" type="number" name="contact"
                    placeholder="contact">
                <input class="border-2 rounded-xl block mt-4 w-full px-3 py-3" type="password" name="password"
                    placeholder="password">
                <input
                    class="border-2 rounded-2xl font-semibold block mt-4 w-full px-3 py-3 bg-red-600 text-white rounded-full"
                    type="submit" value="Create New Account">
                <p class="text-center text-xs mt-4">By continuing, you agree to Pinterest's <br> <span
                        class="font-bold">Terms of Service</span> and acknowledge you've read our <br> <span
                        class="font-bold">Privacy Policy. Notice at collection</span></p>
            </form>
            <a href="/" class="text-gray-700 inline-block w-full text-center font-semibold mt-3 text-[19px]">Login to
                Existing Account</a>
        </div>
    </div>

    <% include ./partials/footer.ejs %>