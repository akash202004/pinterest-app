<% include ./partials/header.ejs %>

<div class="w-full min-h-screen px-10 py-5 text-black">
    <h1 class="text-xl">Create a new post..</h1>
    <hr class="mt-2 bg-black p-[.5px]">
    <form action="/createpost" method="post" enctype="multipart/form-data">
        <input type="file" name="postimage" class="block w-1/3 py-3 rounded-xl mt-2">
        <input type="text" class="block w-1/3 px-2 py-3 rounded-xl border-2 mt-2 bg-gray-200" placeholder="Title" name="title">
        <textarea type="text" class="block w-1/3 px-2 py-3 h-60 rounded-xl border-2 mt-2 bg-gray-200" placeholder="Description" name="description"></textarea>
        <input type="submit" class="block w-1/3 px-2 py-3 rounded-full mt-2 bg-rose-500 text-white font-semibold" value="Create Post">
    </form>
</div>

