<% include ./partials/header.ejs %>

    <div class="w-full min-h-screen">
        <div id="cards" class="flex flex-wrap gap-10 mt-10 px-10">
            <% user.posts.forEach(function(elem){ %>
                <div class="w-60 card">
                    <div class="w-full h-40 bg-zinc-300 rounded-lg overflow-hidden">
                        <img src="/images/uploads/<%= elem.image %>" alt="" class="w-full object-cover h-full">
                    </div>
                    <h5 class="text-black mt-1 text-2xl font-semibold"><%= elem.title %></h5>
                </div>
            <% }) %>
        </div>
    </div>

    <% include ./partials/footer.ejs %>