<% include ./partials/header.ejs %>

    <div class="w-full h-screen bg-rose-600 flex items-center justify-center">
        <div class="w-[27vw] bg-white rounded-2xl px-16 py-4">
            <img src="https://upload.wikimedia.org/wikipedia/commons/0/08/Pinterest-logo.png" alt=""
                class="h-[3vw] m-auto">
            <h1 class="text-3xl text-center font-semibold tracking-tight leading-none mt-2">Welcome to Pinterest</h1>
            <form action="/login" method="post">
                <input class="border-2 rounded-xl block mt-4 w-full px-3 py-3" type="text" name="username"
                    placeholder="username">
                <input class="border-2 rounded-xl block mt-4 w-full px-3 py-3" type="password" name="password"
                    placeholder="password">
                <a href="#" class="mt-2 inline-block font-semibold">Forgot your password?</a>
                <input
                    class="border-2 rounded-2xl font-semibold block mt-4 w-full px-3 py-3 bg-red-600 text-white rounded-full"
                    type="submit" value="Log in">
                <p class="text-center text-xs mt-8">By continuing, you agree to Pinterest's <br> <span
                        class="font-bold">Terms of Service</span> and acknowledge you've read our <br> <span
                        class="font-bold">Privacy Policy. Notice at collection</span></p>
            </form>
            <a href="/register"
                class="text-gray-700 inline-block w-full text-center font-semibold mt-3 text-[19px]">Don't have a
                account?</a>
        </div>
    </div>

    <% include ./partials/footer.ejs %>